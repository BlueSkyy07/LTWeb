@model SV20T1020095.DomainModels.Shipper
@{
    ViewBag.Title = "Xóa người giao hàng";
}
<div class="box box-primary">
    <div class="box-body">
        <form class="" action="~/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label for="">Tên người giao hàng:</label>
                <p class="form-control-static">@Model.ShipperName</p>
            </div>

            <div class="form-group">
                <label for="">Điện thoại:</label>
                <p class="form-control-static">@Model.Phone</p>
            </div>

            <div class="form-group text-right">
                @if (ViewBag.AllowDelete)
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>Xóa
                    </button>
                }
                <a href="~/Customer" class="btn btn-default">Quay lại</a>
            </div>

        </form>
    </div>
</div>