@model SV20T1020095.DomainModels.Shipper
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form class="" action="~/Shipper/Save" method="post">
            <input type="hidden" name="ShipperID" value="@Model.ShipperID" />
            <div class="form-group">
                <label for="">Tên người giao hàng:</label>
                <input type="text" class="form-control" name="ShipperName" autofocus value="@Model.ShipperName">
            </div>

            <div class="form-group">
                <label for="">Điện thoại:</label>
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>Lưu dữ liệu
                </button>
                <a href="~/Shipper" class="btn btn-default">Quay lại</a>
            </div>

        </form>
    </div>
</div>