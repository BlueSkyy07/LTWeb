@model SV20T1020095.DomainModels.Category
@{
    ViewBag.Title = "Xóa loại hàng";
}
<div class="box box-primary">
    <div class="box-body">
        <form class="" action="~/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label for="">Tên loại hàng:</label>
                <p class="form-control-static">@Model.CategoryName</p>
            </div>
            <div class="form-group">
                <label for="">Mô tả:</label>
                <p class="form-control-static">@Model.Description</p>
            </div>

            <div class="form-group text-right">
                @if (ViewBag.AllowDelete)
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i>Xóa
                    </button>
                }
                <a href="~/Customer" class="btn btn-default">Quay lại</a>
            </div>

        </form>
    </div>
</div>