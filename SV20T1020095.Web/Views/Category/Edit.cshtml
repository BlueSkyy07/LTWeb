@model SV20T1020095.DomainModels.Category
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form class="" action="~/Category/Save" method="post">
            <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
            <div class="form-group">
                <label for="">Tên loại hàng:</label>
                <input type="text" class="form-control" name="CategoryName" autofocus value="@Model.CategoryName">
            </div>
            <div class="form-group">
                <label for="">Mô tả:</label>
                <input type="text" class="form-control" name="Description" value="@Model.Description">
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">Quay lại</a>
            </div>

        </form>
    </div>
</div>