@model SV20T1020095.Web.Models.Person
@{
    ViewBag.Title = "Create Person";
}
<div class="box box-primary">
    <div class="box-body">
        <form class="" action="~/Category/Save" method="post">
            <div class="form-group">
                <label for="">Person name:</label>
                <input type="text" class="form-control" name="CategoryName" autofocus value="@Model.Name">
            </div>
            <div class="form-group">
                <label for="">BirthDate:</label>
                <input type="hidden" name="BirthDate" value="@Model.BirthDate">

                <input type="text" class="form-control date-picker" name="BirthDateInput" 
                value="@Model.BirthDate.ToString("dd/MM/yyyy", new System   .Globalization.CultureInfo("en-GB"))">
            </div>
            <div class="form-group">
                <label for="">Salary:</label>
                <input type="text" class="form-control" name="Description" value="@Model.Salary">
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">Quay lại</a>
            </div>

        </form>
    </div>
</div>